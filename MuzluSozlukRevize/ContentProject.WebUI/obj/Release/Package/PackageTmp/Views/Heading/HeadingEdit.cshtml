@using ContentProject.Entity.Concrete
@model Heading
@{
    ViewBag.Title = "HeadingEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Başlık Güncelleme Sayfası</h2>
@using (Html.BeginForm("HeadingEdit", "Heading", FormMethod.Post))
{
<div class="form-group">

    @Html.HiddenFor(x => x.HeadingId, new { @class = "form-control" })
    <br />
    @Html.Label("Başlık Adı")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Kategori Adı")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    @*<select name="CategoryId">
            @foreach (var item in (List<SelectListItem>) ViewBag.vlc)
            {
                <option value="@item.Value ">@item.Text</option>
            }
        </select>*@
    <br />
    @Html.Label("Aktiflik Durumu")
    <div class="checkbox">
        @Html.EditorFor(x => x.isActive)

    </div>

    @Html.HiddenFor(x => x.HeadingDate, new { @class = "form-control" })
    <br />

    @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
    <br />

    @Html.HiddenFor(x => x.Writer.WriterName, new { @class = "form-control" })
    <br />

    @Html.HiddenFor(x => x.CategoryId, new { @class = "form-control" })
    <br />


    <button class="btn btn-success">Güncelle</button>
</div>
}


